  <% end %>

  <div class="field form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: "5"  %>
  </div>

  <div class="field form-group">
    <%= f.label :answer %>
    <%= f.text_field :answer, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
<% end %>
