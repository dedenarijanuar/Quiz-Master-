<div id="content">
  <% if notice.present? %>
    <div class="alert alert-primary notice" role="alert">
     <%= notice %>
    </div>
  <% end %>

<h1>Questions</h1><br/>
<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>Content</th>
      <th>Answer</th>
      <th>Correct Answer</th>
      <th>Wrong Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.answer %></td>
        <td><%= question.correct_answer_text %></td>
        <td><%= question.wrong_answer_text %></td>
        <td><%= link_to 'Show', question, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary ' %></td>
        <td><%= link_to 'Destroy', question, class: 'btn btn-danger',  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path, class: 'btn btn-success' %>
</div>
