<div class="login100-pic js-tilt" data-tilt>
  <img src="/assets/img-01.png" alt="IMG">
</div>

<%= form_for(@user, class: "login100-form validate-form") do |form| %>
  <div class="wrap-input100 validate-input">
    <span class="login100-form-title">
      Register
    </span>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li> - <%= message %></li>
        <% end %>
        </ul><br/>
      </div>
    <% end %>
  </div>

  <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
    <%= form.text_field :email, class: 'input100', type: 'email', placeholder: 'email' %>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
      <i class="fa fa-envelope" aria-hidden="true"></i>
    </span>
  </div>

  <div class="wrap-input100 validate-input" data-validate = "Password is required">
    <%= form.password_field :password, class: 'input100', placeholder: 'password ' %>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
      <i class="fa fa-lock" aria-hidden="true"></i>
    </span>
  </div>

  <div class="wrap-input100 validate-input" data-validate = "Password is required">
    <%= form.password_field :password_confirmation, class: 'input100', placeholder: 'password confirmation' %>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
      <i class="fa fa-lock" aria-hidden="true"></i>
    </span>
  </div>

  <div class="container-login100-form-btn">
    <button class="login100-form-btn" type="submit">
      Submit
    </button>
  </div>

  <div class="text-center p-t-136">
    <a class="txt2" href="<%= login_path %>">
      Or Login to your account
      <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
    </a>
  </div>
<% end %>

